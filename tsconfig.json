{
  "compilerOptions": {
    "esModuleInterop": true,
    "declaration": true,
    "sourceMap": true,
    "target": "es2017",
    "outDir": "dist",
    "lib": ["es2017"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUnusedLocals": true,
    "removeComments": true
  },
  "exclude": ["node_modules", "dist", "test"]
}
